---
const currentPath = Astro.url.pathname;
---
<div class="w-full z-[10000000] mb-4 md:mb-4 sticky top-4  md:top-8 relative flex justify-center">
  <div class="bg-bg p-4 mx-4 lg:mx-12  md:p-3 lg:px-4 rounded-xl md:w-2/3  w-full lg:w-1/2  bg-mbg/60 backdrop-blur-xl md:flex md:items-center md:justify-between">
      <div class="flex items-center justify-between">
        <a class="flex cursor-pointer items-center" href="/">
          <span class="text-[22px] cursor-pointer antialiased font-bold  text-fg">kengyn</span>
        </a>
        <span class="toggler self-center">
          <i class={`text-[22px] cursor-pointer block md:hidden text-primary ph-light ph-list`}></i>
        </span>
      </div>
      <ul class={`md:flex md:items-center ml-0 z-[-1] md:z-auto navlist list-none hidden sm:visible transition-all duration-400 md-static ms:absolute `}>
        <li class="mx-0 my-6 md:my-0 md:mx-2" ><a class:list={[`text-[19px] px-3 py-1 rounded-md hover:!text-primary font-medium !text-fg`, currentPath.includes("/me") ? "md:bg-neutral-800" : "bg-transparent"  ]} href="/src/pages/me" >/me</a></li>
        <!--<li class="mx-0 my-6 md:my-0 md:mx-2" ><a class:list={[`text-[19px] px-3 py-1 rounded-md hover:!text-primary font-medium !text-fg`, currentPath.includes("/blog") ? "md:bg-neutral-800" : "bg-transparent"  ]} href="/blog" >/blog</a></li>-->
        <li class="mx-0 my-6 md:my-0 md:mx-2" ><a class:list={[`text-[19px] px-3 py-1 rounded-md hover:!text-primary font-medium !text-fg`, currentPath.includes("/stuff") ? "md:bg-neutral-800" : "bg-transparent"  ]} href="/stuff" >/stuff</a></li>
          <span class="flex gap-4 lg:gap-0">
          <li class="mx-0 my-2 md:my-0 md:mx-4"><a class="text-xl hover:!text-primary  font-medium  !text-fg" href="/404"><i class="ph-fill ph-linkedin-logo"></i></a></li>
        </span>
          <span class="flex gap-4 lg:gap-0">
          <li class="mx-0 my-2 md:my-0 md:mx-4"><a class="text-xl hover:!text-primary  font-medium  !text-fg" href="https://github.com/kengyn"><i class="ph-fill ph-github-logo"></i></a></li>
        </span>
      </ul>
</div>
</div>
<script >
  const navlist = document.querySelector(".navlist")
  const toggler = document.querySelector(".toggler")
  toggler.addEventListener("click", () => {
    navlist.classList.toggle("hidden")
  })
</script>
