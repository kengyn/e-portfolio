---
import Layout from "../layouts/Layout.astro"
import Project from "../components/Project.astro"

const web = [
  {
    name: 'memory-card',
    desc: 'Memory card game to learn and practice react hooks',
    tech: [{ name: 'react', color: 'bg-teal-300' }, { name: 'JavaScript', color: 'bg-blue-300' }]
  },
  {
    name: 'kinben',
    desc: 'a personal dashboard, lofi player, pomodoro timer and a kanban board',
    tech: [{ name: 'next', color: 'bg-teal-300' }, { name: 'tailwind', color: 'bg-blue-300' }]
  },
  {
    name: 'cyquest',
    desc: 'website for the cyquest 2023, made with a lot of head smashing and generous npm repos',
    tech: [{ name: 'react', color: 'bg-teal-300' }, { name: 'tailwind', color: 'bg-blue-300' }]
  },
  {
    name: 'silxx',
    desc: 'beautiful concept website made for school event',
    tech: [{ name: 'astro', color: 'bg-teal-300' }, { name: 'tailwind', color: 'bg-blue-300' }]
  },
  {
    name: 'crypt',
    desc: 'simple crypt hunt website made for learning actual back end development',
    tech: [{ name: 'next', color: 'bg-teal-300' }, { name: 'express', color: 'bg-blue-300' }]
  },
  {
    name: 'chadcat7.github.io',
    desc: 'basically the blog you\'re seeing rn. rewritten with astro and tailwind',
    tech: [{ name: 'astro', color: 'bg-teal-300' }]
  },
  {
    name: 'save-wildlife',
    desc: 'website made for a competiton for wildlife conservation',
    tech: [{ name: 'html', color: 'bg-orange-400' }, { name: 'js', color: 'bg-yellow-200' }, { name: 'sass', color: 'bg-rose-300' }]
  },
  {
    name: 'project-news-flask',
    desc: 'a very simple news website with flask',
    tech: [{ name: 'html', color: 'bg-orange-400' }, { name: 'flask', color: 'bg-blue-300' }]
  },
  {
    name: 'bubble',
    desc: 'a personal diary app with database and authentication!',
    tech: [{ name: 'html', color: 'bg-orange-400' }, { name: 'flask', color: 'bg-blue-300' }]
  },
  {
    name: 'nftcringe',
    desc: 'a website for a 1 week web dev competition put together in 4hours (hooray procrastication) ',
    tech: [{ name: 'html', color: 'bg-teal-300' }, { name: 'css', color: 'bg-rose-300' }]
  },
]


const projects = [
    {
    title: "Web Development",
    projects: web
    }
  ]
---
<Layout title="Projects and Stuff" description="List of personal projects">
      <div class="text-slate-50  p-2 sm:p-8 md:p-8 lg:px-8 lg:p-8 text-lg leading-10">
        <section class="mt-2 md:mt-10 flex flex-col items-center justify-center w-full">
          <h1 class="text-2xl sm:text-3xl  font-bold ms:my-8 my-2 mb-4 px-8 text-gray-500 text-center sm:text-left">Web  <span class="text-fg">Development</span></h1>
          <div class="flex flex-wrap w-full lg:w-1/2 md:w-2/3">
            {web.map(i => (
              <Project name={i.name} desc={i.desc} tech={i.tech} />
            ))}
          </div>
        </section>
      </div>
</Layout>
